            <div class="row">
                <div id="register" class="col-sm-4 col-sm-offset-7 col-xs-12 col-xs-offset-0">
                    <div class="welcome">
                        <h1><strong>Bem</strong> Vindo</h1>
                        <div class="row">
                            Regista-te para assistires a todos os filmes
                        <span class="pull-right">
                            <a href="{{ route('login') }}" class="log-in">Já tens conta?<i class=""></i></a>
                        </span>
                        </div>
                        <hr/>
                        {{ form_open({action: 'registar', method: 'POST', class: 'register', id: 'registar'}) }}
