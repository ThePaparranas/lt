                                        {{ errors.messages.first_name[0] }}
                                    {% endif %}
#}
                                </div>
                                <div class="col-md-6 no-padding-right">
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                        <div class="form-group">
                                            {{ form_text('last_name', input_old('last_name')|e, {placeholder: 'Apelido', class: 'form-control', id: 'lastName', required: 'required'}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-error">
{#
                                    {% if(errors.messages.last_name |length) %}
                                        {{ errors.messages.last_name[0] }}
                                    {% endif %}
#}
                                </div>
                            </div>

                            <br/>

                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-at"></i></div>
                                {{ form_email('email', input_old('email')|e, {class:'form-control', id: 'email', required: 'required', placeholder:'Email'}) }}
                            </div>
                            <div class="form-error">
{#
                                {% if(errors.messages.email |length) %}
                                    {{ errors.messages.email[0] }}
                                {% endif %}
#}
                            </div>
                            <br/>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-key"></i></div>
                                {{ form_password('password', {placeholder: 'Password', class: 'form-control', id: 'password', required: 'required', autocomplete:'off'}) }}
                            </div>
                            <div class="form-error">
{#
                                {% if(errors.messages.password |length) %}
                                    {{ errors.messages.password[0] }}
                                {% endif %}
#}
                            </div>
                            <br/>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-key"></i></div>
                                {{ form_password('confirm', {placeholder: 'Confirmar Password', class: 'form-control', id: 'confirm', required: 'required', autocomplete:'off'}) }}
                            </div>
                            <div class="form-error">
{#
                                {% if(errors.messages.confirm |length) %}
                                    {{ errors.messages.confirm[0] }}
                                {% endif %}
#}
                            </div>
                        </section>
                        <br/>
                        <section class="new-acc">
                            {{ form_submit('Registar', {class:'btn btn-primary button-full'}) }}
                        </section>

                        {{ form_close }}
                    </div>
                </div>
            </div>
        </div>
        <div class="read-more">
            <a href="#index-container"><i class="fa fa-chevron-down"></i></a>
